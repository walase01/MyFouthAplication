<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fourthAplicattion.Views.AddUserToContactPage">
    <ScrollView>
        
        <Grid ColumnDefinitions="*" RowDefinitions="auto,auto,*,auto" BackgroundColor="AliceBlue" Padding="10">
            <Entry Placeholder="Digite su nombre" Grid.Column="0" Grid.Row="0" Text="{Binding AddNewName}"/>
            <Entry Placeholder="Digite el Numero telefonico" Grid.Column="0" Grid.Row="1"  Text="{Binding AddNewCell}"/>
            <Button Text="Add" Grid.Column="0" Grid.Row="3" Style="{StaticResource ButtonStyle}" Command="{Binding AddContact}"/>
        </Grid>
    </ScrollView>
    
</ContentPage>